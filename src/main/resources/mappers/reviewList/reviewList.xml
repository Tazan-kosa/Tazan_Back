<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ion.kosa.TazanBack.DAO.reviewDAO">
    <insert id="reviewUpload" parameterType="ion.kosa.TazanBack.model.Review">
        <selectKey keyProperty="reviewID" resultType="java.lang.Integer" order="BEFORE">
            select ReviewID_seq.nextval from dual
        </selectKey>

        insert into Review (ReviewID,UserID,PlanID,Region,StartDate,EndDate,ReviewDate,ReviewContent,ReviewTitle) values(${reviewID},${userID},${planID},#{region},#{startDate},#{endDate},#{reviewDate},#{reviewContent},#{reviewTitle})

    </insert>
    <select id="reviewDownload" resultType="ion.kosa.TazanBack.model.Review" parameterType="int">
        select *
        from Review
        where ReviewID = ${reviewID}
    </select>
    <select id="reviewList" resultType="ion.kosa.TazanBack.model.Review">
        select * from Review
    </select>
</mapper>